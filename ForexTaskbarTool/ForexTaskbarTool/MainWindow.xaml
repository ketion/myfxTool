<Window x:Class="ForexTaskbarTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="外汇行情工具" Height="0" Width="0"
        WindowStyle="None" ShowInTaskbar="False" Visibility="Hidden">
    <Grid>
        <tb:TaskbarIcon x:Name="TaskbarIcon"
                        IconSource="icon.ico"
                        ToolTipText="外汇行情工具"
                        TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="XAUUSD (黄金)" Click="SwitchToXAUUSD" />
                    <MenuItem Header="EURUSD (欧元)" Click="SwitchToEURUSD" />
                    <MenuItem Header="GBPUSD (英镑)" Click="SwitchToGBPUSD" />
                    <Separator />
                    <MenuItem Header="刷新" Click="RefreshData" />
                    <MenuItem Header="退出" Click="ExitApplication" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
